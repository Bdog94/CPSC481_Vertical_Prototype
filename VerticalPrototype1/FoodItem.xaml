<UserControl x:Class="VerticalPrototype1.FoodItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300" Height="88">
    <Grid Margin="0,0,0,212">
        <Canvas HorizontalAlignment="Left" Height="88" VerticalAlignment="Top" Width="300" Background="#FFF9F9F9">
            <Label x:Name="lblFoodName" Content="Default Food Item" Canvas.Left="10" Canvas.Top="10" Width="115"/>
            <Label x:Name="lblCustom" Content="Default Customizations" Canvas.Left="10" Canvas.Top="36" Width="280" Height="42" RenderTransformOrigin="0.096,-0.4"/>
            <CheckBox Content="" Canvas.Left="125" Canvas.Top="16" Checked="CheckBox_Checked"/>
        </Canvas>

    </Grid>
</UserControl>
